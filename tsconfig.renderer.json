{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "es2017",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "~*": ["src/renderer*"]
    }
  },
  "include": [
    "src/renderer/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}